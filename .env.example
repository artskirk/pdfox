# Application Environment
# Set to 'prod' for production, 'dev' for development
APP_ENV=dev
APP_DEBUG=0

# Stripe Configuration
# Get these from https://dashboard.stripe.com/apikeys
# The app automatically selects test or live keys based on APP_ENV

# Test keys (used when APP_ENV=dev)
STRIPE_SECRET_KEY_TEST=sk_test_your_stripe_test_secret_key_here
STRIPE_PUBLISHABLE_KEY_TEST=pk_test_your_stripe_test_publishable_key_here

# Live/Production keys (used when APP_ENV=prod)
STRIPE_SECRET_KEY_LIVE=sk_live_your_stripe_live_secret_key_here
STRIPE_PUBLISHABLE_KEY_LIVE=pk_live_your_stripe_live_publishable_key_here

# Webhook secret (use test or live based on environment)
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Legacy single-key format (fallback if environment-specific keys not set)
# STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
# STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# Server Configuration
PORT=3000

# Payment Configuration (file downloads)
PAYMENT_AMOUNT=299
PAYMENT_CURRENCY=eur

# Pro Access Configuration (PDF Editor)
PRO_PAYMENT_AMOUNT=899
JWT_SECRET=your_secure_random_jwt_secret_here

# Google OAuth & Drive API Configuration
# Get these from https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id_here.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:3000/oauth2callback
